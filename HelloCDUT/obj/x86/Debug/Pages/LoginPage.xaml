<Page x:ConnectionId='1'
    x:Class="HelloCDUT.Pages.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HelloCDUT.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:HelloCDUT.Core.ViewModel"
    mc:Ignorable="d" 
    Padding="12"
    >

    <Page.DataContext>
        <vm:LoginPageViewModel x:ConnectionId='2' x:Name="viewModel"/>
    </Page.DataContext>
    
    <Grid Background="{ThemeResource PageBackgroundColorBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Title-->
        <Grid Grid.Row="0" Background="{ThemeResource AppThemeColorBrush}">
            <TextBlock Margin="12,0" FontSize="20" VerticalAlignment="Center"  
                       Foreground="White" Text="Hello CDUT" x:Uid="AppName"/>
        </Grid>

        <Grid Grid.Row="1" Margin="12,24">
            <StackPanel>
                <TextBox PlaceholderText="用户名" Text="{Binding AccountAndPassword.Account,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                         Style="{ThemeResource LightTextBoxStyle}"/>
                <TextBlock Text="{Binding AccountAndPassword.Errors[Account]}" Foreground="Red"/>

                <PasswordBox PlaceholderText="密码" Margin="0,8,0,0"  Password="{Binding AccountAndPassword.Password,Mode=TwoWay}"/>
                <TextBlock/>

                <Grid >
                    <HyperlinkButton>
                        <TextBlock Text="Forget password?"/>
                    </HyperlinkButton>

                    <HyperlinkButton HorizontalAlignment="Right">
                        <TextBlock Text="Sign up"/>
                    </HyperlinkButton>
                </Grid>
                
                <Button x:ConnectionId='3' x:Uid="Login"                                  Margin="0,8,0,0" 
                        Content="Sign in"
                        Style="{StaticResource LightButtonStyle}"/>

            </StackPanel>
 
        </Grid>
    </Grid>
</Page>

